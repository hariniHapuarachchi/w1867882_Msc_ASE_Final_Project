
@{
    ViewData["Title"] = "Index";
}

@model User

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:darkcyan; background-image: url(../Images/user-manager.jpg); background-repeat:no-repeat; background-size:cover">
    <div class="text-center">
        <h1 class="display-4" style="font-weight:bold;font-size:30px; color:aliceblue">Manage User</h1>
             <div>
            <form style="justify-content:center" method="post">
                <div class="form-group">
                    <input hidden type="number" class="form-control" asp-for="UserId" style="width:500px; margin-left:300px" id="UserId" name="UserId" value="@ViewBag.LoggedUser[0]">
                </div>
                <div class="form-group">
                    <input hidden type="text" class="form-control" asp-for="UserName" style="width:500px; margin-left:300px" id="UserName" name="UserName" value="@ViewBag.LoggedUser[1]">
                </div>
                <div class="form-group">
                    <label style="width:500px; text-align:left; color:aliceblue">First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName" style="width: 500px; margin-left: 300px" id="FirstName" value="@ViewBag.LoggedUser[2]">
                </div>
                <div class="form-group">
                    <label style="width:500px; text-align:left; color:aliceblue">Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" style="width: 500px; margin-left: 300px" id="LastName" value="@ViewBag.LoggedUser[3]">
                </div>
                <div class="form-group">
                    <label style="width:500px; text-align:left; color:aliceblue">Password</label>
                    <input type="password" class="form-control" asp-for="Password" style="width: 500px; margin-left: 300px" id="Password" value="@ViewBag.LoggedUser[4]">
                </div>
                <div class="form-group">
                    <label style="width:500px; text-align:left; color:aliceblue">Address</label>
                    <input type="text" class="form-control" asp-for="Address" style="width: 500px; margin-left: 300px" id="Address" value="@ViewBag.LoggedUser[5]">
                </div>
                <div style="margin-right: 340px">
                    @if (ViewBag.LoggedUser[6] == "True")
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" asp-for="Gender" name="checkGender" type="radio" id="femaleCheck" value=true checked>
                            <label class="form-check-label" asp-for="Gender" style="color:aliceblue" for="femaleCheck">Female</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Gender" name="checkGender" id="maleCheck" value=false>
                            <label class="form-check-label" asp-for="Gender" style="color:aliceblue" for="maleCheck">Male</label>
                        </div>
                    }
                    else if (ViewBag.LoggedUser[6] == "False")
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" asp-for="Gender" name="checkGender" type="radio" id="femaleCheck" value=true>
                            <label class="form-check-label" asp-for="Gender" style="color:aliceblue" for="femaleCheck">Female</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="checkGender" asp-for="Gender" id="radio" value=false checked>
                            <label class="form-check-label" asp-for="Gender" style="color:aliceblue" for="maleCheck">Male</label>
                        </div>
                    }
                    
                </div>
                <div class="form-group">
                    <label style="width:500px; text-align:left; color:aliceblue">Phone</label>
                    <input type="tel" class="form-control" asp-for="Phone" style="width: 500px; margin-left: 300px" id="Phone" value="@ViewBag.LoggedUser[7]">
                </div>
                <div class="form-group">
                    <label style="width:500px; text-align:left; color:aliceblue">Email</label>
                    <input type="email" class="form-control" asp-for="Email" style="width: 500px; margin-left: 300px" id="Email" value="@ViewBag.LoggedUser[8]">
                </div>
                <div class="form-group">
                    <label style="width:500px; color:aliceblue; text-align:left">Date of Birth</label>
                    <input type="datetime" asp-for="Dob" style="width: 500px; margin-left: 300px" class="form-control" id="dob" value="@ViewBag.LoggedUser[9]">
                </div>
                <div class="form-group">
                    <label style="width:500px; text-align:left; color:aliceblue">Nic</label>
                    <input type="text" class="form-control" asp-for="Nic" style="width: 500px; margin-left: 300px" id="Nic" value="@ViewBag.LoggedUser[10]">
                </div>
                <div style="height:5px"></div>
                <div class="btn-toolbar" role="toolbar" style="margin-left: 300px" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group" aria-label="First group" style="margin-right:10px">
                        <button type="submit" class="btn btn-primary" asp-controller="UserManagement" asp-action="UpdateUser">Update</button>
                    </div>
                    <div class="btn-group mr-2" role="group" aria-label="Second group" style="margin-left:10px">
                        <button type="reset" class="btn btn-primary">Reset</button>
                    </div>
                </div>
            </form>
        </div>   
    </div>
</body>


