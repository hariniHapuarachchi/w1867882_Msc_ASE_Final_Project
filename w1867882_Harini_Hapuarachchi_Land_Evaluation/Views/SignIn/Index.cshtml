
@{
    ViewData["Title"] = "Index";
}

@model User

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:cadetblue; background-image: url(../Images/Farming1.jpg); background-repeat:no-repeat; background-size:cover">
    <div class="text-center" style="margin-top:50px">
        <h1 class="display-4" style="font-weight:bold;font-size:30px">Login to the Land Evaluation System</h1>
        <div>
            <form style="justify-content:center">
                <div class="form-group">
                    <label for="userName" asp-for="UserName" style="width:500px; text-align:left">User Name</label>
                    <input type="text" asp-for="UserName" class="form-control" style="width: 500px; margin-left: 300px" id="userName" aria-describedby="emailHelp" placeholder="Enter User Name">
                </div>
                <div class="form-group">
                    <label for="password" asp-for="Password" style="width:500px; text-align:left">Password</label>
                    <input type="password" asp-for="Password" style="width: 500px; margin-left: 300px" class="form-control" id="password" placeholder="Password">
                </div>
                <br />
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups" style="margin-left:300px">
                    <div class="btn-group mr-2" role="group" aria-label="First group" style="margin-right:10px">
                        <button type="submit" class="btn btn-primary" asp-controller="SignIn" asp-action="Login">Sign In</button>
                    </div>
                    <div class="btn-group mr-2" role="group" aria-label="Second group" style="margin-left:10px">
                        <button type="reset" class="btn btn-primary">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
