
@{
    ViewData["Title"] = "Index";
}
@model w1867882_Harini_Hapuarachchi_Land_Evaluation.Views.VidewModel.CoconutLandView

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:darkcyan; background-image: url(../Images/landEvaluate1.jpg); background-repeat:no-repeat; background-size:cover">
    <div class="text-center">
        <h1 class="display-4" style="font-weight:bold;font-size:30px">Enter your data to predict the Suitability of Coconut</h1>
        <div>
            <form style="justify-content:center" method="post">
                <div class="form-group">
                    <label style="width:500px; text-align:left; color:aliceblue">Elevation</label>
                    <input type="number" class="form-control" style="width:500px; margin-left:300px" id="evaluation" name="evaluation" runat="server" placeholder="10m" />
                </div>
                <div class="dropdown">
                    <label asp-for="LandModel.Location" style="width:500px; text-align:left; color:aliceblue">Location</label>
                    <select class="dropdown-toggle" asp-for="LandModel.Location" style="width:500px; margin-right:320px; margin-left:300px" id="dropdownLocation">
                        <option>Select Up/Mis/Low Country</option>
                        <option class="dropdown-item" value="Up">Up Country</option>
                        <option class="dropdown-item" value="Mis">Mis Country</option>
                        <option class="dropdown-item" value="Low">Low Country</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="LandModel.Days" style="width:500px; text-align:left; color:aliceblue">Growning Period</label>
                    <input asp-for="LandModel.Days" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="gPeriod" placeholder="Enter Number Days">
                </div>
                <div class="form-group">
                    <label asp-for="LandModel.MeanAnualRF" style="width:500px; text-align:left; color:aliceblue">Mean Annual RF</label>
                    <input asp-for="LandModel.MeanAnualRF" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="meanAnnualRF" placeholder="mm">
                </div>
                <div class="form-group">
                    <label asp-for="LandModel.SoilDepth" style="width:500px; text-align:left; color:aliceblue">Soil Depth</label>
                    <input asp-for="LandModel.SoilDepth" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="soilDepth" placeholder="cm">
                </div>
                <div class="form-group">
                    <label asp-for="CoconutLandModel.MeanAnualTemp" style="width:500px; text-align:left; color:aliceblue">Mean Anual Temperature</label>
                    <input asp-for="CoconutLandModel.MeanAnualTemp" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="MeanAnualTemp" placeholder="Celcius">
                </div>
                <div class="form-group">
                    <label asp-for="CoconutLandModel.TotalSunshine" style="width:500px; text-align:left; color:aliceblue">Total Sunshine</label>
                    <input asp-for="CoconutLandModel.TotalSunshine" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="TotalSunshine" placeholder="hrs">
                </div>
                <div class="form-group">
                    <label asp-for="CoconutLandModel.MinimumHumidity" style="width:500px; text-align:left; color:aliceblue">Min Humidity</label>
                    <input asp-for="CoconutLandModel.MinimumHumidity" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="MinimumHumidity" placeholder="Please give a percenatge">
                </div>
                <div class="dropdown">
                    <label asp-for="CoconutLandModel.SoilTexture" style="width:500px; text-align:left; color:aliceblue">Soil Texture</label>
                    <select class="dropdown-toggle" asp-for="CoconutLandModel.SoilTexture" style=" width:500px; margin-right:320px; margin-left:300px" id="dropdownTexture">
                        <option>Select any option</option>
                        <option class="dropdown-item" value="L">Loam</option>
                        <option class="dropdown-item" value="C">Clay</option>
                        <option class="dropdown-item" value="CL">Clay to Loam</option>
                        <option class="dropdown-item" value="SC">Sandy to Clay</option>
                        <option class="dropdown-item" value="SCL">Sandy to Clay to Loam</option>
                        <option class="dropdown-item" value="SL">Sandy to Loam</option>
                        <option class="dropdown-item" value="ZC">Zilt to Clay</option>
                        <option class="dropdown-item" value="ZCL">Zilt to Clay to Loam</option>
                        <option class="dropdown-item" value="ZL">Zilt to Loam</option>
                        <option class="dropdown-item" value="A">Any</option>
                    </select>
                </div>
                <div class="dropdown">
                    <label asp-for="LandModel.SoilDrainageClass" style="width:500px; text-align:left; color:aliceblue">Soil Drainage Class</label>
                    <select class="dropdown-toggle" asp-for="LandModel.SoilDrainageClass" style="width:500px; margin-right:320px; margin-left:300px" id="dropdownDrainage">
                        <option>Select WD/MWD/ED/ID/PD</option>
                        <option class="dropdown-item" value="WD">WD</option>
                        <option class="dropdown-item" value="MWD">MWD</option>
                        <option class="dropdown-item" value="ID">ID</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CoconutLandModel.WaterDepth" style="width:500px; text-align:left; color:aliceblue">Water Depth</label>
                    <input asp-for="CoconutLandModel.WaterDepth" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="WaterDepth" placeholder="cm">
                </div>
                <div class="form-group">
                    <label asp-for="LandModel.SoilPH" style="width:500px; text-align:left; color:aliceblue">Soil PH</label>
                    <input asp-for="LandModel.SoilPH" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="SoilPH" placeholder="ph">
                </div>
                <div class="form-group">
                    <label asp-for="CoconutLandModel.Ec" style="width:500px; text-align:left; color:aliceblue">Ec</label>
                    <input asp-for="CoconutLandModel.Ec" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="Ec" placeholder="cm">
                </div>
                <div class="form-group">
                    <label asp-for="CoconutLandModel.SlopeAngle" style="width:500px; text-align:left; color:aliceblue">Slope Angle %</label>
                    <input asp-for="CoconutLandModel.SlopeAngle" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="SlopeAngle" placeholder="Please give a percenatge">
                </div>
                <div class="form-group">
                    <label asp-for="LandModel.RockOutcrops" style="width:500px; text-align:left; color:aliceblue">Rock Outcrops %</label>
                    <input asp-for="LandModel.RockOutcrops" type="number" class="form-control" style="width: 500px; margin-left: 300px" id="RockOutcrops" placeholder="Please give a percenatge">
                </div>
                <br />
                <div class="btn-toolbar" role="toolbar" style="margin-left: 300px" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group" aria-label="First group" style="margin-right:10px">
                        <button type="submit" class="btn btn-primary" asp-controller="EvaluateCoconut" asp-action="Create">Evaluate</button>
                    </div>
                    <div class="btn-group mr-2" role="group" aria-label="Second group" style="margin-left:10px">
                        <button type="reset" class="btn btn-primary">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
